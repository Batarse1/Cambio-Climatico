@page
@model Cambio_Climático.Pages.InvestigationsModel
@{
    ViewData["Title"] = "Investigations";
}

<div class="container" style="margin-top:3rem;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Investigación</th>
                <th scope="col">Agencia</th>
                <th scope="col">Correo electrónico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Cambio_Climático.Controllers.InvestigationController.InvestigacionList())
            {
                @if (e.visible == true)
                {
                    <tr>
                        <td><a href="@e.link">@e.nombre</a></td>
                        <td>@e.agencia</td>
                        <td>@e.correo</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@(await Html.RenderComponentAsync<Cambio_Climático.Components.AddUserBlazor>(RenderMode.ServerPrerendered))

<script src="_framework/blazor.server.js"></script>