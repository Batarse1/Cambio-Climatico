    ViewData["Title"] = "Graphics";
}

<header>
    <div class="d-flex h-100 align-items-center GraphHead">
        <div class="mx-auto text-center">
            <h1 class="text-white mx-auto my-0 text-uppercase">Gráficos sobre energía eléctrica</h1>
